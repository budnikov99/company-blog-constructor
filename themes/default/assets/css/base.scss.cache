@font-face{font-family:Roboto;font-weight:bold;src:url(/assets/theme/Roboto-Bold.ttf)}@font-face{font-family:Roboto;font-weight:300;src:url(/assets/theme/Roboto-Thin.ttf)}@font-face{font-family:Roboto;src:url(/assets/theme/Roboto-Regular.ttf)}:root{--color-main: #000}.background-color-main{background-color:var(--color-main)}.color-main{color:var(--color-main)}.font-size-header{font-size:2rem}.header-row{padding:0px 20px}.header-logo{height:3em;margin-right:20px}.header-title{font-family:Roboto;text-decoration:none}.header-info-line{padding:3px 0px;font-size:0.5em;color:#555;font-family:Roboto;text-align:right}.content{padding:30px 70px}.dropdown-menu-item:not(:hover)>.dropdown-submenu{display:none}.dropdown-menu-item-icon:before{content:'^';position:relative;top:-0.25em;display:inline-block;font-family:monospace;transform:rotate(180deg)}.header-menu{padding:0px 20px}.header-menu-item{position:relative;padding:10px 20px;text-decoration:none;font-size:1em;font-family:Roboto;color:white}.header-menu-item>.header-menu-item-label{position:relative;display:inline}.header-menu-item>.header-menu-item-label:after{content:'';position:absolute;left:50%;bottom:-3px;height:2px;width:0px;display:block;background-color:white;transition-property:width, left;transition-duration:0.1s}.header-menu-item:hover>.header-menu-item-label:after{width:100%;left:0}.header-submenu{position:absolute;z-index:1;background:var(--color-main);top:100%;left:0;min-width:100%;box-shadow:1px 1px 3px 1px rgba(0, 0, 0, 0.3)}.header-submenu>.header-menu-item{padding:7px 10px}.header-submenu>.header-menu-item:hover{background-color:rgba(255, 255, 255, 0.1)}.input-button-blank{background:0;border:0;outline:0;margin:0.5em;width:1.5em;height:1.5em;cursor:pointer}.header-input-field{background:transparent;border:0;border-bottom:2px solid white;padding:5px 10px;margin:5px 0px;color:white;font-family:Roboto}.header-input-field::placeholder{color:#eee;font-family:Roboto;font-weight:300}