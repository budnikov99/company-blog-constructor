<div class="header-menu">
    {% for item in data[0].data.items %}
        <div class="header-menu__item">
            {% if item.url == null %}
                <span class="menu-item-text">{{item.text|e}}</span>
            {% else %}
                <a class="menu-item-text" href="{{item.url}}">{{item.text|e}}</a>
            {% endif %}
            {% if item.children is defined %}
                <div class="header-menu__submenu">
                    <div class="header-menu">
                        {% for child in item.children %}
                            <div class="header-menu__item">
                                {% if child.url == null %}
                                    <span class="menu-item-text">{{child.text|e}}</span>
                                {% else %}
                                    <a class="menu-item-text" href="{{child.url}}">{{child.text|e}}</a>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>